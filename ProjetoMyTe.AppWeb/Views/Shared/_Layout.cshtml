                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index" >Sistema MyTe </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" >
                        @* <li class="nav-item" >
                            <a class="nav-link text-white" asp-area="" asp-controller="WbsClient" asp-action="ListarWbsApi">WbsAPI</a>
                        </li> *@
                        @* <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Colaboradores" asp-action="ListarColaboradoresDTO">Colaboradores</a>
                        </li> *@
                        @*
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Wbss" asp-action="ListarWbss">WBS's</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="RegistroHoras" asp-action="ListarRegistros">Registros</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Dashboard" asp-action="ShowDashboard">Dashboard</a>
                        </li> *@
                        <partial name="_NavbarPartial" />

                    </ul>
                   @* <partial name="_LoginPartial" /> *@
                </div>
            </div>
        </nav>
    </header>
    <div class="container">

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

