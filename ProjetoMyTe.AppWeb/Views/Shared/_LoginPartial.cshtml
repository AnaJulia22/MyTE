@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject ProjetoMyTe.AppWeb.Services.ColaboradoresService colaboradoresService

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Autenticacao" asp-action="Index">Olá, @colaboradoresService.BuscarColaborador()!.Nome</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Autenticacao" asp-action="Logout">Logout</a>
        </li>
    } else
    {        
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Autenticacao" asp-action="Registrar">Novo Usuário</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Autenticacao" asp-action="Login">Login</a>
        </li>
    }
</ul>