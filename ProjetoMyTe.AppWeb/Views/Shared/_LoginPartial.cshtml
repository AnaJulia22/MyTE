@using Microsoft.AspNetCore.Identity
@using ProjetoMyTe.AppWeb.Models.Common

@inject SignInManager<IdentityUser> SignInManager
@inject ProjetoMyTe.AppWeb.Services.ColaboradoresService colaboradoresService

@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">

    @if (SignInManager.IsSignedIn(User))

    {

      <li class="nav-item dropdown">

            <a class="nav-link text-white dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" asp-controller="Autenticacao" asp-action="Index">Olá, @colaboradoresService.BuscarColaborador()!.Nome </a>

            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">

                <li><a class="dropdown-item" asp-controller="Autenticacao" asp-action="AlterarSenha">Alterar Senha</a></li>
         
                
            </ul>
      </li>
        

        <li class="nav-item">

            <a class="nav-link text-white" asp-controller="Autenticacao" asp-action="Logout">Logout</a>

        </li>

    }
    else

    {

        <li class="nav-item">

            <a class="nav-link text-white" asp-controller="Autenticacao" asp-action="Registrar">Novo Usuário</a>

        </li>

        <li class="nav-item">

            <a class="nav-link text-white" asp-controller="Autenticacao" asp-action="Login">Login</a>

        </li>

    }

</ul>