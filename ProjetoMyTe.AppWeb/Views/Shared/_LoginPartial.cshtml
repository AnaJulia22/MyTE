﻿@using Microsoft.AspNetCore.Identity
@using ProjetoMyTe.AppWeb.Models.Common

@inject SignInManager<IdentityUser> SignInManager
@inject ProjetoMyTe.AppWeb.Services.ColaboradoresService colaboradoresService

@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">

    @if (SignInManager.IsSignedIn(User))

    {

        <li class="nav-item dropdown">

            <a class="nav-link text-white dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" asp-controller="Autenticacao" asp-action="Index">Olá, @colaboradoresService.BuscarColaborador()!.Nome </a>

            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">

                <li><a class="dropdown-item" asp-controller="Autenticacao" asp-action="AlterarSenha">Alterar Senha</a></li>


            </ul>
        </li>


        <li class="nav-item">

            <a class="nav-link text-white" asp-controller="Autenticacao" asp-action="Logout"> 
                <svg xmlns="http://www.w3.org/2000/svg" width="19" height="19" fill="currentColor" class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0z" />
                    <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708z" />
                </svg>
            </a>

        </li>

    }
    else

    {

        <li class="nav-item">

            <a class="nav-link text-white" asp-controller="Autenticacao" asp-action="Registrar">Novo Usuário</a>

        </li>

        <li class="nav-item">

            <a class="nav-link text-white" asp-controller="Autenticacao" asp-action="Login">Login</a>

        </li>

    }

</ul>