@model ProjetoMyTe.AppWeb.Models.Entities.Colaborador

@{
    ViewData["Title"] = "RemoverColaborador";
}

<h3>Tem certeza que deseja remover o colaborador '@Model.Id'?</h3>
<div>
        
    <form asp-action="RemoverColaborador">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sim, confirmar!" class="btn btn-danger" /> 
        <a asp-action="ListarColaboradores">Não! Voltar para a Lista</a>
    </form>
</div>
