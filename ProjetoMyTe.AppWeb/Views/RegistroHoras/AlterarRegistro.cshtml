@model ProjetoMyTe.AppWeb.Models.Entities.RegistroHoras

@{
    ViewData["Title"] = "Alterar Registro";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Alterar Registro</h2>
                    <form asp-action="AlterarRegistro">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="mt-3">
                            <label asp-for="DataRegistro" class="control-label"></label>
                            <input asp-for="DataRegistro" class="form-control" readonly />
                            <span asp-validation-for="DataRegistro" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="WbsId" class="control-label"></label>
                            <select asp-for="WbsId" asp-items="(SelectList)ViewBag.ListaDeWbss" class="form-select">
                            </select>
                            @* <input asp-for="WbsId" class="form-control" /> *@
                            <span asp-validation-for="WbsId" class="text-danger"></span>
                        </div>
                        @* <div class="form-group">
                        <label asp-for="CpfId" class="control-label"></label> *@
                        <input type="hidden" asp-for="CpfId" />
                        @*  <span asp-validation-for="CpfId" class="text-danger"></span>
                        </div> *@
                        <div class="form-group">
                            <label asp-for="Horas" class="control-label"></label>
                            <input asp-for="Horas" class="form-control" />
                            <span asp-validation-for="Horas" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <div class="row gx-2">
                                <div class="col"> 
                                    <input type="submit" value="Alterar registro" class="btn btn-primary  w-100" />
                                </div>
                                <div class="col">
                                    <a asp-action="ListarRegistrosQuinzena" asp-controller="LancamentoHoras" class="btn btn-secondary w-100">Cancelar</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .card-title {
        color: #890078;
    }

    .form-control {
        border-radius: 10px;
    }

    .btn-primary {
        border-radius: 10px;
        border: none;
        background-color: #890078;
    }
    .btn-primary:hover{
            background-color: #6b056b;
    }

    .btn-secondary {
        border-radius: 10px;
        border: none;
        background-color: #8c9299;
    }

</style>