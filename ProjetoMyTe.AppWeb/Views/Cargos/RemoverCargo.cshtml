@model ProjetoMyTe.AppWeb.Models.Entities.Cargo

@{
    ViewData["Title"] = "Remover Cargo";
}


<h3>Tem certeza que deseja remover o cargo '@Model.Descricao'?</h3>
<div>
      
    <form asp-action="RemoverCargo">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="Sim, confirmar!" class="btn btn-danger " /> 
        <a asp-action="ListarCargos">Não! Voltar para a Lista</a>
    </form>
</div>
