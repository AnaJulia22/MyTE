@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@model ProjetoMyTe.AppWeb.Models.Entities.AlterarSenhaViewModel
@{
    ViewData["Title"] = "Alterar Senha";
}

<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="AlterarSenha" asp-controller="Autenticacao">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CpfId">CPF</label>
                <input asp-for="CpfId" class="form-control" />
                <span asp-validation-for="CpfId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SenhaAntiga"></label>
                <input asp-for="SenhaAntiga" class="form-control" />
                <span asp-validation-for="SenhaAntiga" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SenhaNova"></label>
                <input asp-for="SenhaNova" class="form-control" />
                <span asp-validation-for="SenhaNova" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmaSenha"></label>
                <input asp-for="ConfirmaSenha" class="form-control" />
                <span asp-validation-for="ConfirmaSenha" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Alterar senha</button>
                @if (SignInManager.IsSignedIn(User))
                {
                    if (User.IsInRole("COLABORADOR"))
                    {
                        <a asp-controller="RegistroHoras" asp-action="ListarRegistros" class="btn btn-secondary">Cancelar</a>
                    }
                    else if (User.IsInRole("ADMIN"))
                    {
                        <a asp-controller="Wbss" asp-action="ListarWbss" class="btn btn-secondary">Cancelar</a>
                    }
                    else
                    {
                        <a asp-controller="Dashboard" asp-action="ShowDashboard" class="btn btn-secondary">Cancelar</a>
                    }
                }
            </div>

        </form>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }
    .btn-primary {
        border-radius: 10px;
        border: none;
        background-color: #890078;
    }

        .btn-primary:hover {
            background-color: #6b056b;
        }
    .btn-secondary {
        border-radius: 10px;
        border: none;
        background-color: #8c9299;
    }
</style>