@model ProjetoMyTe.AppWeb.Models.Entities.LogonViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_LoginLayout";
}


<div class="container justify-content-center align-items-center" style="background: linear-gradient(to right, rgba(137, 0, 120, 0.2) 40%, rgba(255, 88, 0, 0.2));
  box-shadow: 0px 0px 20px rgba(70, 69, 69, 0.47); position:relative; bottom:50px; top:50px; height:80vh; width:100vh; border-radius: 10px;">
    <div class="row vh-100 justify-content-center align-items-center">
        <div class="col-md-7  " style="height: 100%;">
            <h1 class="text-center mb-4 mt-4" style="color: #ffffff;">Bem-Vindo ao MyTE!</h1>
            <form asp-action="Login" class="login-form mt-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Cpf" class="control-label text-white">CPF</label>
                    <input asp-for="Cpf" class="form-control" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Senha" class="control-label text-white"></label>
                    <input asp-for="Senha" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label text-white">
                        <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                    </label>
                </div>
                <div class="text-center mt-2">
                    <input type="submit" value="Fazer login" class="btn btn-primary" style="background-color: rgba(255, 88, 0, 0.9); border-radius: 10px; " />
                </div>
                <div class="text-center mt-3 text-white">
                    Ainda não tem uma conta? <a asp-action="Registrar" class="text-white"><strong>Registre-se!</strong></a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /* Custom styling for the login form */
    body {
        background: linear-gradient(to top, #890078 40%, #ff5800);
        background-image: url('/Imgs/MyTE Project - decola.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        overflow-y: hidden;
    }

    .login-form {
        background-color: #aa3c8c;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0px 0px 20px rgba(70, 69, 69, 0.47);
    }

        .login-form .form-group {
            margin-bottom: 15px;
        }

        .login-form label {
            font-weight: bold;
        }

        .login-form input[type="submit"] {
            width: 100%;
        }

    .btn {
        border: none;
    }
</style>



