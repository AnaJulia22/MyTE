@{
    ViewBag.Title = "Success";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: sans-serif;
            background-color: #f4f4f4;
            text-align: center;
            padding-top: 50px;
        }

        .success-container {
            background-color: #d4edda; /* Cor verde para indicar sucesso */
            border: 1px solid #c3e6cb;
            border-radius: 5px;
            padding: 20px;
            margin: 0 auto;
            width: 300px;
        }

        .success-icon {
            color: #155724; /* Cor verde escura */
            font-size: 48px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="success-container">
        <i class="fas fa-check-circle success-icon"></i>
        <h2>Well done!</h2>
        <p>@ViewBag.Message</p>
        <a asp-action="ListarWbss">check it here</a>
        
    </div>
</body>
</html>



